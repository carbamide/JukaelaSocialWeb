<header class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "Jukeala Social", root_path, :id => "logo" %>
			<nav>
				<ul class="nav pull-right">
					<li><%= link_to content_tag(:i, "", :class => "icon-home icon-white") + " Home", root_path %></li>
					<% if signed_in? %>
					<li><%= link_to content_tag(:i, "", :class => "icon-star icon-white") + " Users", users_path %></li>
					<li id="fat-menu" class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li><%= link_to content_tag(:i, "", :class => "icon-user") + " Profile", current_user %></li>
							<li><%= link_to content_tag(:i, "", :class => "icon-cog") + " Settings", edit_user_path(current_user) %></li>
							<li class="divider"></li>
							<li><%= link_to content_tag(:i, "", :class => "icon-lock") + " Sign out", signout_path, :method => "delete" %></li>
						</ul>
					</li>
					<% else %>
					<li><%= link_to content_tag(:i, "", :class => "icon-lock icon-white") + " Sign in", signin_path %></li>
					<% end %>
				</ul>
			</nav>
		</div>
	</div>
</header>